<!-- Incluir o head -->
<%- include('./partials/head') %>

<body>
  <%- include('./partials/navbar') %> 

  <div class="container">

    <% avisos.forEach(avisos => { %>

      <div class="card shadow mt-4">

        <div class="card-header bg-purple text-white pl-5 p-4 d-flex align-items-center justify-content-between">
          <h2> <i class="fas fa-exclamation-circle"></i> <%= avisos.titulo %>  </h2>
          <h3 class="lead"> <%= moment(avisos.data).format("DD/MM/YYYY") %> </h3>
        </div> <!-- Card-header -->
  
        <div class="card-body p-5">
  
          <div class="d-flex align-items-center">
            <img src="img/etecjb_cortada.jpg" class="img-thumbnail rounded-circle" width="75">
            <div class="ml-2">
              <div class="font-weight-bold">ETEC Jo√£o Belarmino</div>
              <div class="text-secundary"> <%= moment( avisos.data, "YYYYMMDD").fromNow(); %> </div>
            </div>
          </div>
  
          <div class="mt-4">  <%= avisos.mensagem %> </div>
  
        </div> <!-- Card body -->
      </div> <!-- Card -->
    <% }) %> <!-- ForEach -->
  </div> <!-- Container -->
      
  <br><br>
  
  <!-- Incluir os scripts do bootstrap -->
  <%- include('./partials/scripts_import') %> 

</body>
</html>
